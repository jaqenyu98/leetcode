class Solution {
public:
    int isPrefixOfWord(string sentence, string searchWord) {
        istringstream iss(sentence);
        string str = "";
        int rst = 0;
        while(iss>>str)
        {
            ++rst;
            if(str.find(searchWord)==0)
                return rst;
        }
        return -1;
    }
};
